<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundobb"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".tela_confirmacao">

    <TextView
        android:id="@+id/txtLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/bernhc"
        android:gravity="center"
        android:text="Confirma sua Inscrição?"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imVEscolaConfirm"
        android:layout_width="277dp"
        android:layout_height="271dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtNomeConf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/bernhc"
        android:gravity="center"
        android:text="TextView"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtEnderConfir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/bernhc"
        android:gravity="center"
        android:text="TextView"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtTelConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/bernhc"
        android:gravity="center"
        android:text="TextView"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/britanic"
            android:onClick="inserirConfirm"
            android:text="Confirmar" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/britanic"
            android:onClick="voltar"
            android:text="Cancelar" />
    </LinearLayout>
</LinearLayout>